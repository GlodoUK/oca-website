<odoo>
    <template
        id="contactus_form"
        inherit_id="website_crm.contactus_form"
        name="Contact Form Captcha"
    >
        <xpath expr="//div[hasclass('s_website_form_field')][last()]" position="after">
            <div
                class="form-group col-12 s_website_form_field s_website_form_required"
                data-type="text"
                data-name="Field"
            >
                <div class="row s_col_no_resize s_col_no_bgcolor">
                    <label
                        class="col-form-label col-sm-auto s_website_form_label"
                        style="width: 200px"
                    >
                        <span class="s_website_form_label_content">Human?</span>
                        <span class="s_website_form_mark"> *</span>
                    </label>
                    <div class="col-sm">
                        <span class="o_website_form_recaptcha" required="" />
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
